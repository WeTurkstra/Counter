        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="wet.software.counter.CounterListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="wet.software.counter.CounterFormActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="wet.software.counter.CounterDetailsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>